{% extends 'layouts/default.layout.njk' %}

{% set pageTitle = t.site_title %}
{% set pageBreadcrumbItems = [
    { text: 'Home', url: '/' },
    { text: 'Vehicle registration search' }
  ] 
%}

{% block content %}
  {% call components.gridRow() %}
    {{ components.heading(text='Vehicle registration search results', tag='h1', size='large') }}
    {{ components.paragraph(text='Results for ' + vehicleReg) }}
    <table>
      <thead>
        <th>Payment code</th>
        <th>Date</th>
      </thead>
      <tbody>
        {% for result in results %}
          <tr>
            <td><a href="payment-code/{{result.paymentCode}}">{{ result.paymentCode }}</a></td>
            <td>{{ result.date }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {%- endcall %}
{% endblock %}
