<header id="global-header" class="with-proposition">
  <div class="header-wrapper">
    <div class="header-global">
      <div class="header-logo">
        <a href="https://www.gov.uk" title="Go to the GOV.UK homepage" id="logo" class="content">
          <img src="{{ assets }}/images/gov.uk_logotype_crown_invert_trans.png?0.22.1" width="36" height="32" alt="">
          GOV.UK
        </a>
      </div>
    </div>
  <a href="{{ urlroot }}/logout" title="Logout" data-testid="logout">
    {{ components.heading(text='Logout', tag='h3', size='small', extraClass='userInfo') }}
  </a>
  {{ components.heading(text='Logged in as '+rsp_user.name, tag='h3', size='small', extraClass='userInfo') }}
</header>

{% if not hideLayoutPhaseBanner %}
  <!-- header-bar -->
  <div id="global-header-bar"></div>
  <!-- /header-bar -->
{% endif %}